{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"formatter": {
		"indentWidth": 2,
		"indentStyle": "space",
		"ignore": [
			".turbo/**",
			".svelte-kit/**"
		]
	},
	"files": {
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noEmptyInterface": "off",
				"noConfusingLabels": "off"
			}
		}
	}
}
